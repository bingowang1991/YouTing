<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  
    <RelativeLayout
        android:id="@+id/userinfosetting_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical" 
        android:background="#20B2AA" >

        <ImageButton
            android:id="@+id/my_reg_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_backround_deep"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/button_back"
            android:onClick="ReturnToMain"/>
  
      <View
            android:id="@+id/line1_vertical"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/line_vertical"
            android:layout_toRightOf="@id/my_reg_return"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >
        </View>
        <TextView
            android:id="@+id/title"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/line1_vertical"
            android:layout_marginLeft="3dp"
            android:layout_centerVertical="true"
            android:text="用户注册"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_translucence"
           />

    </RelativeLayout>
    
    <ImageView 
       android:layout_width="200dp"
       android:layout_height="100dp"
       android:background="@mipmap/main_title"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="40dp"
       />
    
    <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="60px"           
            >

        <ImageView 
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/mini_img_mine"
                
                />
	<EditText 
	    android:id="@+id/newUser_input"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:hint="用户名"
	    android:layout_toRightOf="@id/name"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="12dp"
	    android:layout_alignBottom="@id/name"
	    android:layout_marginBottom="4dp"
	    android:singleLine="true"
	    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	    
	    />
	
	
	   </RelativeLayout>
	
	 <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="15px"
            
            >

            <ImageView 
                android:id="@+id/key"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/mini_img_key"
                
                />
	   <EditText 
	    android:id="@+id/newPassword_input"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:password="true"
	    android:hint="密码"
	    android:layout_toRightOf="@id/key"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="12dp"
	    android:layout_alignBottom="@id/key"
	    android:layout_marginBottom="4dp"
	    android:inputType="textPassword"
	    android:singleLine="true"
	     android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	    />
	
	 </RelativeLayout>
	
	 <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
             android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="15px"
           
            >

            <ImageView 
                android:id="@+id/key2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/mini_img_key"
                
                />
   
        <EditText 
	    android:id="@+id/Confirm_input"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:password="true"
	    android:hint="确认密码"
	    android:layout_toRightOf="@id/key2"
	    android:layout_centerVertical="true"
	    android:layout_marginLeft="12dp"
	    android:layout_alignBottom="@id/key2"
	    android:layout_marginBottom="4dp"
	    android:inputType="textPassword"
	    android:singleLine="true"
	    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
	    />
       </RelativeLayout>
	
	
	
	    <Button 
	        android:id="@+id/registerbtn"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:text="注册"
	        android:background="#20B2AA"
            android:textSize="20dp" 
            android:textColor="#ffffff"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
	        />
	    <Button 
	        android:id="@+id/clearbtn"
	        android:layout_width="fill_parent"
	        android:layout_height="40dp"
	        android:text="重置"    
            android:background="@mipmap/register_button_bg"
            android:textColor="#20B2AA"
            android:layout_marginTop="20dp"              
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
	        />
	
</LinearLayout>

