<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="13dp" >

    <TextView
        android:id="@+id/send_time_txt"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/avatar_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/img_avatar_default"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/display_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar_iv"
            android:layout_marginLeft="10dp"
            android:ems="5"
            android:singleLine="true"
            android:textSize="10sp"
            android:textColor="#555555"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/display_name_tv"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/avatar_iv"
            android:background="@drawable/receive_msg"
            android:maxWidth="250.0dip" >


        <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/picture_iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/fetch_failed"/>
			<ImageView
			    android:layout_width ="wrap_content"
			    android:layout_height="wrap_content"
			    android:id = "@+id/play_pause"
			    android:src="@drawable/mini_play"
			    android:background="#00000000"
			    android:layout_marginLeft="30dp"
			    android:layout_marginTop="30dp"
			    android:tag="0"/>

            <TextView
                android:id="@+id/music_name"
                android:layout_width="wrap_content"
                android:maxWidth="100dp"
                android:layout_height="wrap_content"
               	android:layout_marginLeft="5dp"
               	android:layout_marginTop = "20dp"
               	android:layout_toRightOf="@id/picture_iv"
                android:textSize="16dp"
                android:singleLine="true"
                android:text="holy"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="100dp"
                android:layout_marginLeft="5dp"
               	android:layout_marginTop = "8dp"
               	android:layout_toRightOf="@id/picture_iv"
               	android:layout_below="@id/music_name"
                android:textSize="12dp"
                android:text="god"
                android:singleLine="true"
                android:ellipsize="end"/>
        </RelativeLayout>

        
    </RelativeLayout>

</LinearLayout>