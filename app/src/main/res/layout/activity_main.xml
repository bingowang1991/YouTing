<com.example.myview.DragLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res/com.example.testvolley"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_main_side" >
    
       <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="0dp"
        android:paddingTop="40dp" >

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.example.myview.CustomImageView
            android:id="@+id/iv_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="38dp"
            zhy:src="@drawable/img_avatar_default"
            zhy:type="circle"           
            />
                     
            <TextView
                android:id="@+id/my_name"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="25sp"
                />
        </LinearLayout>
         
        <TextView 
                android:id="@+id/my_mood"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_below="@id/ll1"
                android:layout_marginRight="80dp"  
                android:layout_marginTop="5dp"        
                android:clickable="true" 
                
                android:textSize="14sp"  
                android:gravity="center_horizontal"
               />
          
          <View
            android:id="@+id/line1_div_hor"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@mipmap/line_div_hor"
            android:layout_below="@id/my_mood"
            android:layout_marginTop="20dp"
            >
            </View>
            
        <LinearLayout
              android:id="@+id/ll2"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/my_mood"
              android:gravity="center_vertical"
              android:clickable="true" 
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:layout_marginTop="20dp"
              android:background="@drawable/button_backround_deep">

       <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_message"
            android:src="@mipmap/ic_message" />

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="我的消息"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_message"/>
        </LinearLayout> 
         
         <View
            android:id="@+id/line2_div_hor"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@mipmap/line_div_hor"
            android:layout_below="@id/ll2"
          
            >
            </View>
            
              <LinearLayout
              android:id="@+id/ll3"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ll2"
              android:gravity="center_vertical"
              android:clickable="true" 
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@drawable/button_backround_deep"
            >

       <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_share"
            android:src="@mipmap/ic_share" />

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="好友分享"
            android:layout_marginLeft="10dp"/>
           
        </LinearLayout> 
         
         <View
            android:id="@+id/line3_div_hor"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@mipmap/line_div_hor"
            android:layout_below="@id/ll3"
          
            >
            </View>
      
         <LinearLayout
              android:id="@+id/ll4"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ll3"
              android:gravity="center_vertical"
              android:clickable="true" 
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@drawable/button_backround_deep">

       <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_friends"
            android:src="@mipmap/ic_friends" />

       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="我的好友"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_friends"/>
        </LinearLayout> 
         
        <View
            android:id="@+id/line4_div_hor"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@mipmap/line_div_hor"
            android:layout_below="@id/ll4"
           
            >
            </View>
            
        <LinearLayout
              android:id="@+id/ll5"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ll4"
              android:gravity="center_vertical"
              android:clickable="true" 
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@drawable/button_backround_deep">

       <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_lover"
            android:src="@mipmap/ic_lover" />
       <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="情侣模式"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_lover"/>
        </LinearLayout> 
         
        <View
            android:id="@+id/line5_div_hor"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="@mipmap/line_div_hor"
            android:layout_below="@id/ll5"
           
            >
            </View>
    </RelativeLayout>

       
   <com.example.myview.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:glowpad="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".MainActivity" >

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@drawable/main_title_bg">    
        
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:scaleType="centerCrop"
               
                android:src="@drawable/img_avatar_default" />

         
        
             <ImageView
                android:id="@+id/search_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:src="@drawable/search_icon" />
        
              <View
            android:id="@+id/line1_vertical"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/line_vertical" 
            android:layout_toLeftOf="@id/search_icon"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            >
        </View>
    </RelativeLayout>
   
   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >  
     </RelativeLayout>
     
    <com.fima.glowpadview.GlowPadView
        android:id="@+id/glow_pad_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"  
        android:layout_weight="7"    
        android:focusable="true"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/glowpadview_margin_bottom"
        glowpad:directionDescriptions="@array/snooze_dismiss_direction_descriptions"
        glowpad:feedbackCount="1"
        glowpad:glowRadius="@dimen/glowpadview_glow_radius"
        glowpad:handleDrawable="@drawable/ic_alarm_alert_touch_handle"
        glowpad:innerRadius="@dimen/glowpadview_inner_radius"
        glowpad:outerRadius="@dimen/glowpadview_target_placement_radius"
        glowpad:outerRingDrawable="@drawable/ic_alarm_alert_outerring"
        glowpad:pointDrawable="@drawable/ic_lockscreen_glowdot"
        glowpad:snapMargin="@dimen/glowpadview_snap_margin"
        glowpad:targetDescriptions="@array/snooze_dismiss_descriptions"
        glowpad:targetDrawables="@array/snooze_dismiss_drawables"
        glowpad:vibrationDuration="20" />
    
    
     <RelativeLayout 
      android:layout_width="fill_parent"
      android:layout_height="0dp" 
      android:layout_weight="2.5"
      android:id="@+id/black"             
      >                
      </RelativeLayout>
      
<!--      <include
         android:id = "@+id/mini_music_control" 
         layout = "@layout/mini_player_layout"/> -->
     
     <LinearLayout 
      android:layout_width="fill_parent"
      android:layout_height="0dp" 
      android:layout_weight="1.2"
      android:id="@+id/mini_music_control"     
      android:orientation="horizontal"   
      android:background="@drawable/mini_music_bg"     
      >
             <android.support.v4.view.ViewPager
                android:id="@+id/mini_music"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                />
            
             <View
            android:id="@+id/line2_vertical"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/line_vertical" 
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="4dp"
            >
            </View>
            
           <com.example.myview.RoundProgressBar
                android:id="@+id/roundProgressBar1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:layout_gravity="center_vertical"
               
            />
            
 
                             
    </LinearLayout>

 </LinearLayout>
</com.example.myview.MyRelativeLayout>

</com.example.myview.DragLayout>